# Example .env file for production configuration
# Copy this to .env and update with your values

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Rainfall Advisory API
API_VERSION=2.0.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Security (Optional - set to enable API key authentication)
API_KEY_ENABLED=false
# API_KEYS=your-secret-key-1,your-secret-key-2

# CORS (for production, specify allowed origins)
# CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=rainfall_api.log

# Monitoring (Optional - add Sentry DSN for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Cache
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# External APIs
WEATHER_API_TIMEOUT=10
